@model EmployeeMgt.Core.ViewModels.EmployeeVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">

    <h1>Creating New Expenses</h1>

    <hr />
    <div class="row" style="display: flex;justify-content:center;">
        <div class="col-md-8">
            <form asp-action="Create" class="user">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control form-control-user " id="exampleFirstName" placeholder="Enter Your First Name" style="resize: none; border-radius: 15px;" type="text" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control form-control-user " id="exampleFirstName" placeholder="Enter Your Last Name" style="resize: none; border-radius: 15px;" type="text" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="MobileNo" class="control-label"></label>
                            <input asp-for="MobileNo" class="form-control form-control-user " id="exampleFirstName" placeholder="Enter Your Phone Number" style="resize: none; border-radius: 15px;" type="text" />
                            <span asp-validation-for="MobileNo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DateofBirth" class="control-label"></label>
                            <input asp-for="DateofBirth" class="form-control form-control-user " id="exampleFirstName" placeholder="Enter Your Birth Date" style="resize: none; border-radius: 15px;" type="date" />
                            <span asp-validation-for="DateofBirth" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="form-group">
                    <label asp-for="Department" class="control-label"></label>
                    <input asp-for="Department" class="form-control form-control-user " id="exampleFirstName" placeholder="Enter Your Department" style="resize: none; border-radius: 15px;" type="text" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>




                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary btn-user btn-block" style="resize: none; border-radius: 15px;" />
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-dark btn-user btn-block" style="resize: none; border-radius: 15px;">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
<br />

