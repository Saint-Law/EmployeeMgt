@model EmployeeMgt.Core.ViewModels.EmployeeVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">

    <h1>Employee Details</h1>

    <div>
        <hr />
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MobileNo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MobileNo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateofBirth)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateofBirth)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Department)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Department)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateCreated)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-danger btn-sm">Edit</a> |
        <a asp-action="Index" class="btn btn-outline-dark btn-sm">Back to List</a>
    </div>
</div>